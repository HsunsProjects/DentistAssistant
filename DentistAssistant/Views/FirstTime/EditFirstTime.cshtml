                                                            }
                                                            <label class="text-primary">@area1string</label>
                                                        }
                                                    </td>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area2 = @Model.PatientRecordUnit.FdiUnitsN[i].FdiDetails.Where(c => c.FdiArea.Equals("2")).ToList();
                                                            string area2string = string.Empty;
                                                            foreach (FdiDetails f in area2)
                                                            {
                                                                area2string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area2string</label>
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area4 = @Model.PatientRecordUnit.FdiUnitsN[i].FdiDetails.Where(c => c.FdiArea.Equals("4")).OrderByDescending(c => c.FdiPosition).ToList();
                                                            string area4string = string.Empty;
                                                            foreach (FdiDetails f in area4)
                                                            {
                                                                area4string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area4string</label>
                                                        }
                                                    </td>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area3 = @Model.PatientRecordUnit.FdiUnitsN[i].FdiDetails.Where(c => c.FdiArea.Equals("3")).ToList();
                                                            string area3string = string.Empty;
                                                            foreach (FdiDetails f in area3)
                                                            {
                                                                area3string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area3string</label>
                                                        }
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.TextAreaFor(m => m.PatientRecordUnit.FdiUnitsN[i].Fdi.Description, new { @class = "col-md-12 text-primary", style = "width:100%", rows = "3", disabled = "disabled" })
                                    </div>
                                    <div class="form-group col-md-12">
                                        <button class="btn btn-default col-md-offset-9" type="button" data-toggle="modal" data-target="#FdiDescription" href="@Url.Action("FdiDescription", "EditFirstTimeModal", new { patientRecordId = Model.PatientRecordUnit.Id, fdiId = Model.PatientRecordUnit.FdiUnitsN[i].Fdi.Id, type = "N" })"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger fdiremove" type="button"><i class="fa fa-trash-o"></i></button>
                                    </div>
                                </div>
                            }
                        </td>
                        <td class="col-md-2" id="assistantArea">
                            @for (int i = 0; i < Model.PatientRecordUnit.RecordUserUnit.Count; i++)
                            {
                                <div id="@Model.PatientRecordUnit.RecordUserUnit[i].Id" class="form-group userArea">
                                    <div class="form-group col-md-12">
                                        <hr />
                                    </div>
                                    <label class="text-primary">@Model.PatientRecordUnit.RecordUserUnit[i].UserName</label>
                                    <button class="btn btn-danger userremove pull-right" type="button"><i class="fa fa-trash-o"></i></button>
                                </div>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="@Url.Action("Record", "Patient", new { id = Model.PatientSetting.Id })" class="btn btn-primary pull-right">返回</a>
    </form>
</div>

<div id="FdiDescription" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
        </div>
    </div>
</div>

<div id="AssistantList" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
        </div>
    </div>
</div>

<script>
    $("#FdiDescription").on('hidden.bs.modal', function () {
        $(this).data('bs.modal', null);
    });

    $(document).on('click', '.fdiremove', function () {
        var $fdiArea = $(this).closest('.fdiArea');
        var id = $fdiArea.attr('id');        
        $.confirm({
            title: '提示',
            content: '<p>是否刪除此牙位明細？</p>',
            buttons: {
                cancel: {
                    text: '取消',
                    action: function () {
                    }
                },
                confirm: {
                    text: '確定',
                    btnClass: 'btn btn-danger delete',
                    action: function () {
                        $.ajax({
                            type: 'POST',
                            url: '/EditFirstTimeModal/RemoveFdiDescription',
                            data: { id: id },
                            success: function (result) {
                                if (result) {
                                    if (result.status) {
                                        $fdiArea.remove();
                                    }
                                    else {
                                        alert(message);
                                    }
                                }
                                else {
                                    alert('沒有回應');
                                }
                            }
                        });
                    }
                }
            }
        });
    });

    $(document).on('click', '.userremove', function () {
        var $userArea = $(this).closest('.userArea');
        var id = $userArea.attr('id');
        $.ajax({
            type: 'POST',
            url: '/EditFirstTimeModal/RemoveAssistant',
            data: { id: id },
            success: function (result) {
                if (result) {
                    if (result.status) {
                        $userArea.remove();
                    }
                    else {
                        alert(message);
                    }
                }
                else {
                    alert('沒有回應');
                }
            }
        });
    });
</script>
