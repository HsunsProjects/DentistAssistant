<h1>編輯初診詢問單</h1>

<div>
    <form method="post" action="@Url.Action("EditFirstTime")">
        <div class="form-group">
            <a href="@Url.Action("Record", "Patient", new { id = Model.PatientSetting.Id })"><i class="fa fa-arrow-circle-o-left"></i>返回牙醫療程紀錄單</a>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <h4>
                    <label><b>初診時間：</b></label>
                    <label class="text-primary">
                        @Html.DisplayFor(m => m.PatientSetting.FirstTimeTime, "{0:yyyy/MM/dd HH:ss}")
                    </label>
                </h4>
            </div>
            <div class="col-md-4">
                <h4>
                    <label><b>診間：</b></label>
                    <label class="text-primary">
                        @Html.DisplayFor(m => m.PatientRecordUnit.Room)
                    </label>
                </h4>
            </div>
            <div class="col-md-4">
                <h4>
                    <label><b>看診醫師：</b></label>
                    <label class="text-primary">
                        @Html.DisplayFor(m => m.PatientRecordUnit.UserName)
                    </label>
                </h4>
            </div>
        </div>
        <div class="form-group form-inline">
            <label>預約時間:</label>
            @Html.TextBoxFor(m => m.PatientRecordUnit.OrderTime, new { @class = "form-control text-primary", id = "OrderTime" })
            <label>病患抵達:</label>
            @Html.TextBoxFor(m => m.PatientRecordUnit.ArriveTime, new { @class = "form-control text-primary", id = "ArriveTime" })
            <label>起始看診:</label>
            @Html.TextBoxFor(m => m.PatientRecordUnit.DrArriveTime, new { @class = "form-control text-primary", id = "DrArriveTime" })
            <label>結束看診:</label>
            @Html.TextBoxFor(m => m.PatientRecordUnit.DrLeaveTime, new { @class = "form-control text-primary", id = "DrLeaveTime" })
            <label>病患離開:</label>
            @Html.TextBoxFor(m => m.PatientRecordUnit.PtLeaveTime, new { @class = "form-control text-primary", id = "PtLeaveTime" })
        </div>
        <div class="form-group">
            <table class="table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>初診溝通<button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#FdiDescription" href="@Url.Action("FdiDescription", "EditFirstTimeModal", new { patientRecordId = Model.PatientRecordUnit.Id, type = "F" })"><i class="fa fa-plus"></i></button></th>
                        <th>下次療程<button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#FdiDescription" href="@Url.Action("FdiDescription", "EditFirstTimeModal", new { patientRecordId = Model.PatientRecordUnit.Id, type = "N" })"><i class="fa fa-plus"></i></button></th>
                        <th>填寫助理<button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#AssistantList" href="@Url.Action("AssistantList", "EditFirstTimeModal", new { patientRecordId = Model.PatientRecordUnit.Id })"><i class="fa fa-plus"></i></button></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-md-5" id="descriptionArea">
                            @for (int i = 0; i < Model.PatientRecordUnit.FdiUnitsF.Count; i++)
                            {
                                <div id="@Model.PatientRecordUnit.FdiUnitsF[i].Fdi.Id" class="fdiArea">
                                    <div class="form-group col-md-12">
                                        <hr />
                                    </div>
                                    <div class="form-group col-md-12" @(Model.PatientRecordUnit.FdiUnitsF[i].FdiDetails.Count > 0 ? "" : "style=display:none")>
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area1 = @Model.PatientRecordUnit.FdiUnitsF[i].FdiDetails.Where(c => c.FdiArea.Equals("1")).OrderByDescending(c => c.FdiPosition).ToList();
                                                            string area1string = string.Empty;
                                                            foreach (FdiDetails f in area1)
                                                            {
                                                                area1string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area1string</label>
                                                        }
                                                    </td>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area2 = @Model.PatientRecordUnit.FdiUnitsF[i].FdiDetails.Where(c => c.FdiArea.Equals("2")).ToList();
                                                            string area2string = string.Empty;
                                                            foreach (FdiDetails f in area2)
                                                            {
                                                                area2string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area2string</label>
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area4 = @Model.PatientRecordUnit.FdiUnitsF[i].FdiDetails.Where(c => c.FdiArea.Equals("4")).OrderByDescending(c => c.FdiPosition).ToList();
                                                            string area4string = string.Empty;
                                                            foreach (FdiDetails f in area4)
                                                            {
                                                                area4string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area4string</label>
                                                        }
                                                    </td>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area3 = @Model.PatientRecordUnit.FdiUnitsF[i].FdiDetails.Where(c => c.FdiArea.Equals("3")).ToList();
                                                            string area3string = string.Empty;
                                                            foreach (FdiDetails f in area3)
                                                            {
                                                                area3string += f.FdiPosition;
                                                            }
                                                            <label class="text-primary">@area3string</label>
                                                        }
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.TextAreaFor(m => m.PatientRecordUnit.FdiUnitsF[i].Fdi.Description, new { @class = "col-md-12 text-primary", style = "width:100%", rows = "3", disabled = "disabled" })
                                    </div>
                                    <div class="form-group col-md-12">
                                        <button class="btn btn-default col-md-offset-9" type="button" data-toggle="modal" data-target="#FdiDescription" href="@Url.Action("FdiDescription", "EditFirstTimeModal", new { patientRecordId = Model.PatientRecordUnit.Id, fdiId = Model.PatientRecordUnit.FdiUnitsF[i].Fdi.Id, type = "F" })"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger fdiremove" type="button"><i class="fa fa-trash-o"></i></button>
                                    </div>
                                </div>
                            }
                        </td>
                        <td class="col-md-5" id="nextDealArea">
                            @for (int i = 0; i < Model.PatientRecordUnit.FdiUnitsN.Count; i++)
                            {
                                <div id="@Model.PatientRecordUnit.FdiUnitsN[i].Fdi.Id" class="fdiArea">
                                    <div class="form-group col-md-12">
                                        <hr />
                                    </div>
                                    <div class="form-group col-md-12" @(Model.PatientRecordUnit.FdiUnitsN[i].FdiDetails.Count > 0 ? "" : "style=display:none")>
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td style="width:50%;">
                                                        @{
                                                            var area1 = @Model.PatientRecordUnit.FdiUnitsN[i].FdiDetails.Where(c => c.FdiArea.Equals("1")).OrderByDescending(c => c.FdiPosition).ToList();
                                                            string area1string = string.Empty;
                                                            foreach (FdiDetails f in area1)
                                                            {
