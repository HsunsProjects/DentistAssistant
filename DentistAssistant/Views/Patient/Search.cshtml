
@{
    ViewData["Title"] = "查詢結果";
}

<h1>查詢結果</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>病患編號</th>
            <th>病患名稱</th>
            <th>身分證號</th>
            <th>性別</th>
            <th>生日</th>
            <th>家用電話</th>
            <th>手機</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.PatNo</td>
                <td>@m.PatName</td>
                <td>@m.Id</td>
                <td>@m.Sex</td>
                <td>@(m.Birth.ToString("yyyy-MM-dd"))</td>
                <td>@m.TelH</td>
                <td>@m.Moble1</td>
                <td><a href="@Url.Action("Record", "Patient", new { id = @m.Id })" class="btn btn-info">選擇</a></td>
            </tr>
        }
    </tbody>
</table>