@model DentistAssistant.ViewModels.PhrasesEditPhrasesViewModel

@{
    ViewData["Title"] = "EditPhrases";
}

<h1>片語編輯</h1>

<div class="col-md-12">
    <div class="form-group">
        <form method="post" action="@Url.Action("EditPhrases")">
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "6" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.Id)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary col-md-offset-11">送出</button>
            </div>
        </form>
    </div>
</div>