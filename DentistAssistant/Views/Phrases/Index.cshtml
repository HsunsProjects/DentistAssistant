@{
    ViewData["Title"] = "片語清單";
}

<h1>@(ViewBag.PhraseGroupName)清單</h1>

<div class="form-group">
    <a href="@Url.Action("PhraseGroup", "Phrases")"><i class="fa fa-arrow-circle-o-left"></i>返回片語分類</a>
</div>
<div class="panel panel-collapse">
    <div class="panel-heading">
        <span class="panel-title">　</span>
        <div class="panel-heading-controls">
            <a type="button" class="btn btn-outline" href="@Url.Action("AddPhrases", "Phrases", new { phraseGroupId = @ViewBag.PhraseGroupId })">加入片語</a>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>片語</th>
                    <th class="col-md-1">功能</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Description</td>
                        <td>
                            <a href="@Url.Action("EditPhrases", "Phrases", new { id = p.Id })" class="btn btn-primary">編輯</a>
                            <a href="@Url.Action("DeletePhrases", "Phrases", new { phraseGroupId = @ViewBag.PhraseGroupId, id = p.Id })" class="btn btn-danger">刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
